---
import { configApp } from '@/config/config.app';
import { AppLayout, Grid } from '@coffic/cosy-ui';

// 从 URL 获取当前语言
const currentLocale = Astro.url.pathname.split('/')[2] || 'zh-cn';

// 定义支持的语言
const languages = ['zh-cn', 'en'];

export const getStaticPaths = async () => {
  return [
    {
      params: { lang: 'zh-cn' },
    },
  ];
};
---

<AppLayout
  debug={false}
  metaConfig={{
    title: '网格布局演示',
    description: 'Cosy UI - A beautiful Astro component library',
    keywords: 'Cosy UI, Astro, component library, grid layout',
    author: 'CofficLab',
    robots: 'index, follow',
  }}
  sidebarConfig={{
    sidebarItems: [],
    debug: false,
  }}
  showHeader={true}
  showFooter={true}
  showSidebar={false}
  footerConfig={{
    siteName: 'Cosy UI',
    homeLink: configApp.homeLink,
    slogan:
      currentLocale === 'zh-cn'
        ? '优雅、高效的 Astro 组件库'
        : 'A beautiful Astro component library',
    company: 'CofficLab',
    copyright: '© 2025 CofficLab',
    inspirationalSlogan:
      currentLocale === 'zh-cn'
        ? '构建美好的用户界面'
        : 'Build a beautiful user interface',
    products: [
      { name: 'Cisum', href: 'https://coffic.cn/cisum' },
      { name: 'JuiceEditor', href: 'https://coffic.cn/juice_editor' },
      { name: 'GitOK', href: 'https://coffic.cn/gitok' },
      { name: 'Cosy UI', href: 'https://github.com/cosyzone/cosy-ui' },
    ],
    aboutLink: 'https://coffic.cn/en/meta/about',
    contactLink: 'https://coffic.cn/en/meta/contact',
    termsLink: 'https://coffic.cn/en/meta/terms',
    privacyLink: 'https://coffic.cn/en/meta/privacy',
    historyLink: 'https://coffic.cn/en/meta/out-story',
    techStackLink: 'https://coffic.cn/en/meta/tech-stack',
  }}
  headerConfig={{
    logoHref: configApp.homeLink,
    navItems: configApp.getNavItems(currentLocale),
  }}
  mainContentConfig={{
    verticalPadding: '4xl',
    size: 'full',
    padding: 'xl',
  }}>
  <div class="cosy:space-y-8">
    <h1 class="cosy:text-3xl cosy:font-bold">网格布局演示</h1>

    <!-- 基础网格布局 -->
    <section class="cosy:space-y-4">
      <h2 class="cosy:text-2xl cosy:font-semibold">基础网格布局</h2>
      <Grid cols={3} gap="md">
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          1
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          2
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          3
        </div>
      </Grid>
    </section>

    <!-- 响应式网格布局 -->
    <section class="cosy:space-y-4">
      <h2 class="cosy:text-2xl cosy:font-semibold">响应式网格布局</h2>
      <Grid cols={{ base: 1, sm: 2, md: 3, lg: 4 }} gap="md">
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          1
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          2
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          3
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          4
        </div>
      </Grid>
    </section>

    <!-- 不规则网格布局 -->
    <section class="cosy:space-y-4">
      <h2 class="cosy:text-2xl cosy:font-semibold">不规则网格布局</h2>
      <Grid cols={3} gap="md">
        <div
          class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center"
          style="grid-column: span 2;">
          跨越2列
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          1列
        </div>
        <div class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center">
          1列
        </div>
        <div
          class="cosy:bg-base-200 cosy:p-4 cosy:rounded-lg cosy:text-center"
          style="grid-column: span 2;">
          跨越2列
        </div>
      </Grid>
    </section>
  </div>
</AppLayout>
